<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_up_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_center"
    tools:context=".Auth.SignUp">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="189dp"
        android:layout_height="151dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bored_games_logos" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:backgroundTint="@color/colorGradientRoyalBlue"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginStart="55dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="10dp"
        android:background="@color/whiteCardColor"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/loginCardRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">


            <EditText
                android:id="@+id/et_username_reg"
                android:layout_width="222dp"
                android:gravity="center"
                android:layout_height="51dp"
                android:layout_marginTop="50dp"
                android:autofillHints="@string/prompt_email"
                android:hint="Enter Username"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_baseline_account_circle_24"
                android:textColorHint="@color/white"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/et_email_reg"
                android:layout_width="222dp"
                android:layout_height="51dp"
                android:autofillHints="@string/prompt_email"
                android:hint="Enter Email"
                android:gravity="center"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_username_reg"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/et_password_reg"
                android:layout_width="222dp"
                android:layout_height="51dp"
                android:autofillHints="@string/prompt_password"
                android:hint="Enter Password"
                android:gravity="center"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_email_reg"
                tools:ignore="MissingConstraints"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="63dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorGradientRoyalBlue"
        android:text="SIGN UP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView" />

</androidx.constraintlayout.widget.ConstraintLayout>