        android:theme="@style/Theme.BoredGames">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Auth.Login" />
        <activity android:name=".Auth.SignUp" />
        <activity android:name=".Ui.HomePage" />
        <activity android:name=".Ui.Games" />
        <activity android:name=".Hangedman.GameActivity1" />
        <activity android:name=".JigsawPuzzle.GameActivity2"/>
        <activity android:name=".JigsawPuzzle.PuzzleActivity"/>
